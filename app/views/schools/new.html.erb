	</td></tr>
	<tr><td colspan=2>
		
		<%= form.text_field:phno,placeholder: "Contact No" %>
	</td></tr>
	 
	 <%= form.fields_for :branches, Branch.new do |branch_form| %>
	<tr><td colspan=2>Other Branch</td></tr>
		<tr><td colspan=2>
		
		<%= branch_form.text_field:area,placeholder: "Branch Area" %>
	</td></tr>
	<tr><td colspan=2>
		
		<%= branch_form.text_area:address,placeholder: "Branch Address" %>
	</td></tr>
	<tr><td colspan=2>
		
		<%= branch_form.text_field:phno,placeholder: "Branch Contact No" %>
	</td></tr>
